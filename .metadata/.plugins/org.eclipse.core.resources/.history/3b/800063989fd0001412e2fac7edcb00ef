package leetcode_solution;

import java.util.Arrays;

public class two_sum {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] numbers={63,72,2, 13, 7, 11, 15};
		twoSum(numbers,9);
	}
	
	public static int[] twoSum(int[] numbers, int target){
		/*
		int[] indices = new int[2];
		for(int i=0;i<numbers.length;i++){
			for(int j=i+1;j<numbers.length;j++){
				if((numbers[i]+numbers[j])==target){
					indices[0]=i+1;
					indices[1]=j+1;
					System.out.print("index1 = "+indices[0]+"; index2 = "+indices[1]);
				}
				//System.out.print("index1 = "+numbers[i]+"; index2 = "+numbers[j]+"\n");
			}
			
		}
		return indices;
		*/
		
		
		
		int[] indices=new int[2];
		int index1=0;
		int index2=0;
		
		for(int i=0;i<numbers.length;i++){
			index1=i+1;
			int sub=target-numbers[i];
			if(Arrays.asList(numbers).contains(sub)){
				index2=Arrays.asList(numbers).indexOf(sub)+1;
			}
				
		}
		indices[0]=index1;
		indices[1]=index2;
		System.out.print("index1 "+index1+" num "+indices[0]+ " index2 "+index2+" number "+indices[1]);
		return indices;
	}
}
