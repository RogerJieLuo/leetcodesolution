	}
	
	public static void quick(int arr[]){
		
		int cur=arr[0];
		int lcount=0;
		int rcount=0;
		for(int i=0;i<arr.length;i++){
			if(arr[i]<cur){
				//left[lcount]=arr[i];
				lcount++;
			}else{
				//right[rcount]=arr[i];
				rcount++;
			}
		}
		int left[]=new int[lcount];
		int right[]=new int[rcount];
		for(int i=0;i<arr.length;i++){
			if(arr[i]<cur){
				left[lcount]=arr[i];
				//lcount++;
			}else{
				right[rcount]=arr[i];
				//rcount++;
			}
		}
		//quick(arr,left,right);
	}

}
