package leetcode_solution;

public class rever_bits2 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		System.out.print(reverseBits(1));
	}
	
	public static int reverseBits(int n) {
		int reverse=0;
		String str=Integer.toBinaryString(n);
		System.out.print(str+" haha\n");
		StringBuilder str_ = new StringBuilder(str);
		str=str_.reverse().toString();
		System.out.print(str+"\n");
		int count=0;
		int len=str.length();
		for(int i=1;i<(32-len);i++){
			str+="0";
			count++;
		}
		System.out.print(" haha "+count+" "+len + " "+ str);
		try{
			reverse=Integer.parseInt(str);
		}catch(NumberFormatException e){
			reverse=0;
		}
		
		
		return reverse;
    }
}

