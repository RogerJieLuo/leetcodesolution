package leetcode_solution;

import java.util.Arrays;

public class two_sum {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		int[] numbers={63,72,2, 13, 7, 11, 15};
		twoSum(numbers,9);
	}
	
	public static int[] twoSum(int[] numbers, int target){
		/*
		int[] indices = new int[2];
		for(int i=0;i<numbers.length;i++){
			for(int j=i+1;j<numbers.length;j++){
				if((numbers[i]+numbers[j])==target){
					indices[0]=i+1;
					indices[1]=j+1;
					System.out.print("index1 = "+indices[0]+"; index2 = "+indices[1]);
				}
				//System.out.print("index1 = "+numbers[i]+"; index2 = "+numbers[j]+"\n");
			}
			
		}
		return indices;
		*/
		
		
		Arrays.sort(numbers);
		int[] indices=new int[2];
		int index1=0;
		int index2=numbers.length-1;
		
		while(index1<index2){
		if(numbers[index1]+numbers[index2]<target){
			index1++;
			System.out.print("index1 "+index1+ "+index2+"+index2+"\n");
		}else if(numbers[index1]+numbers[index2]>target){
			index2--;
			System.out.print("index1 "+index1+ "+index2+"+index2+"\n");
		}
		}
		indices[0]=index1;
		indices[1]=index2;
		int num1=numbers[index1];
		int num2=numbers[index2];
		System.out.print("index1 "+index1+" num "+num1+ " index2 "+index2+" number "+num2);
		return indices;
	}
}
